<UserControl x:Class="DARTS.Views.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DARTS.Views"
             mc:Ignorable="d" 
             d:DesignHeight="435" d:DesignWidth="800">
    <Grid>
        <Button Name="StartMatchButton" Content="Start Match" HorizontalAlignment="Center" Margin="0,110,0,0" VerticalAlignment="Top" Command="{Binding StartMatchButtonClickCommand}"/>
        <Button Name="PlayerOverviewButton" Content="Players Overview" HorizontalAlignment="Center" Margin="0,170,0,0" VerticalAlignment="Top" Command="{Binding PlayerOverviewButtonClickCommand}"/>
        <Button Name="MatchOverviewButton" Content="Match Overview" HorizontalAlignment="Center" Margin="0,230,0,0" VerticalAlignment="Top" Command="{Binding MatchOverviewButtonClickCommand}"/>
        <Button Name="OptionsButtonClick" Content="Options" HorizontalAlignment="Center" Margin="0,290,0,0" VerticalAlignment="Top" Command="{Binding OptionsButtonClickCommand}"/>
    </Grid>
</UserControl>
