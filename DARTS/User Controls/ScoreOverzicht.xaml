<UserControl x:Class="DARTS.User_Controls.ScoreOverzicht"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DARTS.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

            <Grid>
                <Rectangle HorizontalAlignment="Left" Height="30" Stroke="Black" VerticalAlignment="Top" Width="800" Fill="Red" Grid.ColumnSpan="2"/>

                <Label HorizontalAlignment="Left" VerticalAlignment="Top" x:Name="Player1_name" Content="{Binding Player1}"  Foreground="White" Height="30" Width="40" FontSize="20" />
        <Label HorizontalAlignment="Right" VerticalAlignment="Top" x:Name="Player2_name" Content="{Binding Player2}"  Foreground="White"  Height="30" Width="40" FontSize="20" />
    </Grid>
     

    
</UserControl>
